<%= form_for [:admin, @member], :html => { class: "admin-add" } do |f| %>
  <header>
    <h1><i class="fa fa-user"></i>
      <% if @member.new_record? %>
        New Member</h1>
      <% else %>
        Edit Member 
      <% end %>
    </h1>
  </header>
  <%= render "shared/errors", object: @member %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>
  <div>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  </div>
  <div>
  <%= f.submit %>
  </div>
<% end %>
