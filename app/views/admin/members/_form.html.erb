<%= form_for [:admin, member], :html => { class: "admin-add" } do |f| %>
  <header>
    <h1><i class="fa fa-user"></i>
      <% if member.new_record? %>
        New Member
      <% else %>
        Edit Member 
      <% end %>
    </h1>
  </header>
  <%= render "shared/errors", object: member %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>
  <div>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  </div>
  <div>
    <%= f.label :bibliography %>
    <%= f.text_field :bibliography %>
  </div>
  <div>
    <%= f.label :image %>
    <div id="image"></div>
    <% if @member.image_id? %>
      <%= image_tag attachment_url(member, :image, :fill, 150, 150) %>
      <div class="check_box">
        <%= f.check_box :remove_image %>
        <%= f.label :remove_image %>
      </div>
    <% end %>
    <%= f.attachment_field :image, direct: true, data: { remote_id: :member_image_cache_id } %>
  </div>
  <div>
  <%= f.submit %>
  </div>
<% end %>
