<%= form_for [:admin, @theme], :html => { class: "admin-add" } do |f| %>
  <header>
    <h1>New Theme</h1>
  </header>
  <%= render "shared/errors", object: @theme %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
