<%= button_to "Add News Article", new_admin_news_article_path, method: "get" %>

<ul>
  <% @news_articles.each do |article| %>
    <li><%= link_to article.title, admin_news_article_path(article) %>
    <%= link_to "Edit", edit_admin_news_article_path(article) %>
    <%= link_to "Delete", admin_news_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
  <% end %>
</ul>
