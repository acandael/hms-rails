<% content_for(:title, "News") %>
<section class="news">
  <header>
    <h1>Health, Media &amp; Society News</h1>
  </header>
  <div class="newsfeed">
  <% @articles.each do |article| %>
  <article>
    <h2><%= link_to article.title, news_article_path(article) %></h2>
    <p><%= truncate(article.body, length: 90, separator: ' ') %></p>
    <footer>
      <% if article.date.present? %>
        <p>
        <time datetime="<%= article.date %>"><%= article.date.strftime('%d %B %Y') %></time></p>
      <% end %>
    </footer>
  </article>
  <% end %>
  </div>
  <div class="twitter">
  <a class="twitter-timeline" href="https://twitter.com/HMS_UGent">Tweets by HMS_UGent</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
  </div>
</section>
