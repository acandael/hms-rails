<section class="publications">
  <header>
  <h1>Publications</h1>
  </header>
  <div class="theme">
  <% @publications.each do |publication| %>
    <article class="publication">
      <header>
        <h1><%= publication.title %></h1>
        <p class="date"><%= publication.created_at.strftime('%d  %B %Y') %> | <%= publication.description %> | <% if publication.themes.any? %>
         <% publication.themes.each do |theme| %> 
           <%= link_to theme.title, theme_path(theme) %>
         <% end %>
      <% end %>
        </p>
      </header>
      <div class="content">
        <% if publication.members.any? %>
          <p class="authors">Authors: 
            <% publication.members.each do |member| %>
              <%= link_to member.name, member_path(member) %>
            <% end %>
          </p>
        <% end %>
      </div>
      <% if publication.document_id? %>
      <div class="download">
        <form action="<%= attachment_url(publication, :document) %>" method="get">
          <button>Download</button>
        </form>
      </div>
      <% end %>
    </article>
  <% end %>
  </div>
</section>
